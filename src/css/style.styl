// Import all partials
@require './_*.styl'

@import 'https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.3.2/css/simple-line-icons.min.css';


body
  // background: rgb(131, 179, 214)
  // background-image: url('/images/bubble.jpg')
  // background-repeat: no-repeat
  // background-position: top left
  // background-size: auto
  background: #336699;

  color: white


main
  margin: 0 auto
  max-width: 90%
  text-align: center

.internal
    text-align: left

@keyframes fadein {
  from { opacity: 0; scale: 0.5; }
  to   { opacity: 1; scale:1; }
}

#about
  blockquote
    font-size: 0.9em
    display block
    margin-top: 1em
    color: gray
  h2
    span
      display: inline
  span
    font-style: italic
    font-weight: bold
    display: block
    font-size: 0.8em
    color: white
  p
    font-size: 1.2em
    span
      font-weight: normal
      font-size: 1.2em
      font-style: normal
      display: inline
      margin-right: 0.5em

header.mainHeader

  nav
    margin-bottom: 2em

  ul
    margin: 0
    padding: 0
    display: flex
    flex-direction: row

    li
      flex: 1
      list-style: none


  h1
    font-size 5rem
    img
      width: 30%
    span
      margin-left: 0.1em
  h3
    margin 0
    font-size 2rem
    position relative
    display inline-block

iframe
  width: 100%;
  height: 25em;

// Small devices (phones, 576px and up)
@media (max-width: 576px)

  header.mainHeader
    padding-top: 2em
    margin-bottom: 3em

    .nav-hamburger
      width: 1.4em
      position absolute
      top: 1.5em
      right: 1.8em
      cursor: pointer;
      .hamb
        display: block
        width: 1.4em
        margin-bottom: 0.3em
        border-bottom: 3px solid #fff

    nav
      animation: fadein 1.5s;
      display: none
      &.visible
        display: block
      ul
        display: flex
        flex-direction: column
        margin-top: 2em
        li
          flex: 1

          flex-direction: column
          padding: 0
          font-size: 1.2em
          border-bottom: 1px solid #fff
        a
          text-decoration: none
          color: white
          width: 100%

          display: block
          padding: 1em

  .flex-container
    display: flex
    flex-direction: column

  #tipResult
    li
      width: 90%
      margin: 0 auto
      text-align: left
      line-height: 1.3em

